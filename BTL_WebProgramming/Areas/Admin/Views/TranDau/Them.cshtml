@{
    ViewData["Title"] = "Thêm Trận đấu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f0f3f7;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 60px auto;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        h2 {
            color: #006400;
            text-align: center;
            margin-bottom: 25px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        button {
            background: #28a745;
            color: white;
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background: #218838;
            }

        a.back {
            text-decoration: none;
            color: #555;
            margin-left: 10px;
        }

            a.back:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>➕ Thêm Trận đấu mới</h2>
        <form method="post">
            <label>Đội chủ nhà:</label>
            <input type="text" name="DoiChuNha" required />

            <label>Đội khách:</label>
            <input type="text" name="DoiKhach" required />

            <label>Ngày thi đấu:</label>
            <input type="datetime-local" name="NgayThiDau" required />

            <label>Mã sân vận động (MaSVD):</label>
            <input type="number" name="MaSVD" required />

            <label>Giá vé:</label>
            <input type="number" name="GiaVe" required />

            <button type="submit">💾 Lưu</button>
            <a href="/Admin/TranDau" class="back">⬅ Quay lại</a>
        </form>
    </div>
</body>
</html>
