@{
    ViewData["Title"] = "Thêm người dùng";
}

<div class="p-6 bg-gray-50 min-h-screen">
    <h2 class="text-3xl font-bold text-green-700 mb-6">➕ Thêm người dùng mới</h2>

    <form asp-action="Them" method="post" class="bg-white shadow-lg rounded-2xl p-6 w-[500px] space-y-4">
        <div>
            <label class="font-semibold">Họ tên:</label>
            <input type="text" name="hoten" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Email:</label>
            <input type="email" name="email" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Mật khẩu:</label>
            <input type="password" name="matkhau" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Vai trò:</label>
            <select name="vaitro" class="border p-2 rounded w-full">
                <option value="KhachHang">Khách hàng</option>
                <option value="QuanTri">Quản trị</option>
            </select>
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Lưu</button>
        <a asp-action="Index" class="ml-3 text-gray-700 hover:underline">Hủy</a>
    </form>
</div>
