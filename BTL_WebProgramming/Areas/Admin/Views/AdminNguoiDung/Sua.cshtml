@model System.Data.DataRow
@{
    ViewData["Title"] = "Sửa người dùng";
}

<div class="p-6 bg-gray-50 min-h-screen">
    <h2 class="text-3xl font-bold text-green-700 mb-6">✏️ Chỉnh sửa thông tin</h2>

    <form asp-action="Sua" method="post" class="bg-white shadow-lg rounded-2xl p-6 w-[500px] space-y-4">
        <input type="hidden" name="id" value="@Model["MaNguoiDung"]" />

        <div>
            <label class="font-semibold">Họ tên:</label>
            <input type="text" name="hoten" value="@Model["HoTen"]" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Email:</label>
            <input type="email" name="email" value="@Model["Email"]" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Mật khẩu:</label>
            <input type="text" name="matkhau" value="@Model["MatKhau"]" class="border p-2 rounded w-full" required />
        </div>

        <div>
            <label class="font-semibold">Vai trò:</label>
            <select name="vaitro" class="border p-2 rounded w-full">
                <option value="KhachHang" @(Model["VaiTro"].ToString() == "KhachHang" ? "selected" : "")>Khách hàng</option>
                <option value="QuanTri" @(Model["VaiTro"].ToString() == "QuanTri" ? "selected" : "")>Quản trị</option>
            </select>
        </div>

        <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Cập nhật</button>
        <a asp-action="Index" class="ml-3 text-gray-700 hover:underline">Hủy</a>
    </form>
</div>
