@{
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Liên hệ - TicketBall</title>
    <link rel="stylesheet" href="~/css/LienHe.css" asp-append-version="true" />

        <!-- Navigation -->
        <nav class="fixed top-0 w-full z-50 navbar-scroll border-b border-green-600">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="text-white text-2xl font-bold">
                                ⚽ <span class="text-yellow-400">Ticket</span>Ball
                            </div>
                        </div>
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-8">
                            <a href="main.html" class="text-white hover:text-yellow-400 px-3 py-2 text-sm font-medium transition-colors">Trang chủ</a>

                            <a href="muave.html" class="text-white hover:text-yellow-400 px-3 py-2 text-sm font-medium transition-colors">Mua vé</a>
                            <a href="lichthidau.html" class="text-white hover:text-yellow-400 px-3 py-2 text-sm font-medium transition-colors">Lịch thi đấu</a>
                            <a href="#" class="text-yellow-400 px-3 py-2 text-sm font-medium">Liên hệ</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Header Banner -->
        <section class="bg-gradient-to-r from-green-600 to-blue-600 pt-16 pb-12 text-white relative overflow-hidden">
            <div class="absolute inset-0">
                <div class="floating-element absolute top-10 left-10 w-20 h-20 bg-white bg-opacity-10 rounded-full"></div>
                <div class="floating-element absolute top-32 right-20 w-16 h-16 bg-yellow-400 bg-opacity-20 rounded-full" style="animation-delay: -2s;"></div>
                <div class="floating-element absolute bottom-20 left-1/4 w-12 h-12 bg-white bg-opacity-15 rounded-full" style="animation-delay: -4s;"></div>
            </div>

            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
                <div class="text-center">
                    <h1 class="text-5xl font-bold mb-6">Liên hệ với chúng tôi</h1>
                    <p class="text-xl text-green-100 max-w-3xl mx-auto leading-relaxed">
                        Chúng tôi luôn sẵn sàng hỗ trợ bạn! Hãy liên hệ với đội ngũ chuyên nghiệp của TicketBall
                        để được tư vấn và hỗ trợ tốt nhất về việc mua vé xem bóng đá.
                    </p>

                    <!-- Quick Contact Stats -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 max-w-4xl mx-auto">
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-400 mb-2">24/7</div>
                            <div class="text-green-100">Hỗ trợ khách hàng</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-400 mb-2">&lt; 2h</div>
                            <div class="text-green-100">Thời gian phản hồi</div>
                        </div>
                        <div class="text-center">
                            <div class="text-3xl font-bold text-yellow-400 mb-2">98%</div>
                            <div class="text-green-100">Khách hàng hài lòng</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

            <!-- Contact Methods -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">

                <!-- Phone Contact -->
                <div class="contact-card bg-white rounded-2xl shadow-lg p-8 text-center">
                    <div class="relative mb-6">
                        <div class="pulse-ring absolute inset-0 w-16 h-16 bg-green-400 rounded-full mx-auto"></div>
                        <div class="relative w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3">Hotline hỗ trợ</h3>
                    <p class="text-gray-600 mb-4">Gọi ngay để được tư vấn trực tiếp</p>
                    <div class="space-y-2">
                        <div class="text-2xl font-bold gradient-text">1900 1234</div>
                        <div class="text-sm text-gray-500">Miễn phí từ 8:00 - 22:00</div>
                    </div>
                    <button onclick="callHotline()" class="mt-4 bg-green-500 hover:bg-green-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                        Gọi ngay
                    </button>
                </div>

                <!-- Email Contact -->
                <div class="contact-card bg-white rounded-2xl shadow-lg p-8 text-center">
                    <div class="relative mb-6">
                        <div class="pulse-ring absolute inset-0 w-16 h-16 bg-blue-400 rounded-full mx-auto"></div>
                        <div class="relative w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3">Email hỗ trợ</h3>
                    <p class="text-gray-600 mb-4">Gửi email để được hỗ trợ chi tiết</p>
                    <div class="space-y-2">
                        <div class="text-lg font-bold text-blue-600">support@ticketball.vn</div>
                        <div class="text-sm text-gray-500">Phản hồi trong vòng 2 giờ</div>
                    </div>
                    <button onclick="sendEmail()" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                        Gửi email
                    </button>
                </div>

                <!-- Office Contact -->
                <div class="contact-card bg-white rounded-2xl shadow-lg p-8 text-center">
                    <div class="relative mb-6">
                        <div class="pulse-ring absolute inset-0 w-16 h-16 bg-orange-400 rounded-full mx-auto"></div>
                        <div class="relative w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center mx-auto">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3">Văn phòng</h3>
                    <p class="text-gray-600 mb-4">Đến trực tiếp để được tư vấn</p>
                    <div class="space-y-2">
                        <div class="text-sm font-medium text-gray-900">123 Nguyễn Huệ, Q.1</div>
                        <div class="text-sm text-gray-600">TP. Hồ Chí Minh</div>
                        <div class="text-sm text-gray-500">T2-T6: 8:00-18:00</div>
                    </div>
                    <button onclick="viewMap()" class="mt-4 bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                        Xem bản đồ
                    </button>
                </div>
            </div>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

                <!-- Contact Form -->
                <div class="bg-white rounded-2xl shadow-xl p-8">
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 mb-4">Gửi tin nhắn cho chúng tôi</h2>
                        <p class="text-gray-600 leading-relaxed">
                            Điền thông tin vào form bên dưới và chúng tôi sẽ phản hồi bạn trong thời gian sớm nhất.
                            Mọi thắc mắc về vé, lịch thi đấu hay dịch vụ đều được hỗ trợ tận tình.
                        </p>
                    </div>

                    <form id="contactForm" onsubmit="submitForm(event)" class="space-y-6">
                        <!-- Name Input -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                Họ và tên <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="name" name="name" required
                                   class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all"
                                   placeholder="Nhập họ và tên của bạn">
                        </div>

                        <!-- Email Input -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                Email <span class="text-red-500">*</span>
                            </label>
                            <input type="email" id="email" name="email" required
                                   class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all"
                                   placeholder="example@email.com">
                        </div>

                        <!-- Phone Input -->
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                                Số điện thoại
                            </label>
                            <input type="tel" id="phone" name="phone"
                                   class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all"
                                   placeholder="0123 456 789">
                        </div>

                        <!-- Subject Select -->
                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                                Chủ đề
                            </label>
                            <select id="subject" name="subject"
                                    class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all">
                                <option value="">Chọn chủ đề</option>
                                <option value="ticket">Hỗ trợ mua vé</option>
                                <option value="refund">Hoàn tiền/Đổi vé</option>
                                <option value="schedule">Lịch thi đấu</option>
                                <option value="technical">Hỗ trợ kỹ thuật</option>
                                <option value="other">Khác</option>
                            </select>
                        </div>

                        <!-- Message Textarea -->
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                                Nội dung tin nhắn <span class="text-red-500">*</span>
                            </label>
                            <textarea id="message" name="message" rows="5" required
                                  class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all resize-none"
                                  placeholder="Nhập nội dung tin nhắn của bạn..."></textarea>
                            <div class="text-right text-sm text-gray-500 mt-1">
                                <span id="charCount">0</span>/500 ký tự
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" id="submitBtn"
                                class="w-full btn-primary text-white py-4 rounded-lg font-bold text-lg hover:shadow-lg transition-all">
                            <div class="flex items-center justify-center space-x-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                                </svg>
                                <span>Gửi tin nhắn</span>
                            </div>
                        </button>
                    </form>
                </div>

                <!-- Map and Additional Info -->
                <div class="space-y-8">

                    <!-- Google Maps -->
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                        <div class="p-6 border-b border-gray-200">
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">Vị trí văn phòng</h3>
                            <p class="text-gray-600">123 Nguyễn Huệ, Quận 1, TP. Hồ Chí Minh</p>
                        </div>

                        <div class="map-container h-80">
                            <!-- Embedded Google Maps -->
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4326002567447!2d106.69831731533414!3d10.776530192319513!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f4b3330bcc9%3A0x2a4e7d0e5b8c5c5c!2zTmd1eeG7hW4gSHXhu4csIFF1YW4gMSwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaWV0bmFt!5e0!3m2!1svi!2s!4v1635123456789!5m2!1svi!2s"
                                    width="100%"
                                    height="100%"
                                    style="border:0;"
                                    allowfullscreen=""
                                    loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>

                        <div class="p-6">
                            <div class="grid grid-cols-2 gap-4 text-sm">
                                <div>
                                    <div class="font-medium text-gray-900 mb-1">Giờ làm việc</div>
                                    <div class="text-gray-600">T2-T6: 8:00-18:00</div>
                                    <div class="text-gray-600">T7: 8:00-12:00</div>
                                </div>
                                <div>
                                    <div class="font-medium text-gray-900 mb-1">Phương tiện</div>
                                    <div class="text-gray-600">Metro: Bến Thành</div>
                                    <div class="text-gray-600">Bus: 03, 19, 152</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Section -->
                    <div class="bg-white rounded-2xl shadow-xl p-8">
                        <h3 class="text-2xl font-bold text-gray-900 mb-6">Câu hỏi thường gặp</h3>

                        <div class="space-y-4">
                            <div class="border border-gray-200 rounded-lg p-4">
                                <button onclick="toggleFAQ(1)" class="w-full text-left flex items-center justify-between">
                                    <span class="font-medium text-gray-900">Làm sao để mua vé online?</span>
                                    <svg id="faq-icon-1" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </button>
                                <div id="faq-content-1" class="hidden mt-3 text-gray-600">
                                    Bạn có thể mua vé trực tuyến bằng cách chọn trận đấu, chọn chỗ ngồi và thanh toán qua thẻ tín dụng hoặc ví điện tử.
                                </div>
                            </div>

                            <div class="border border-gray-200 rounded-lg p-4">
                                <button onclick="toggleFAQ(2)" class="w-full text-left flex items-center justify-between">
                                    <span class="font-medium text-gray-900">Có thể hoàn tiền vé không?</span>
                                    <svg id="faq-icon-2" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </button>
                                <div id="faq-content-2" class="hidden mt-3 text-gray-600">
                                    Vé có thể được hoàn tiền trong vòng 24h trước giờ thi đấu với phí xử lý 10%.
                                </div>
                            </div>

                            <div class="border border-gray-200 rounded-lg p-4">
                                <button onclick="toggleFAQ(3)" class="w-full text-left flex items-center justify-between">
                                    <span class="font-medium text-gray-900">Vé điện tử có hợp lệ không?</span>
                                    <svg id="faq-icon-3" class="w-5 h-5 text-gray-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </button>
                                <div id="faq-content-3" class="hidden mt-3 text-gray-600">
                                    Vé điện tử hoàn toàn hợp lệ. Bạn chỉ cần xuất trình mã QR trên điện thoại tại cổng vào.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Social Media Section -->
        <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h2 class="text-3xl font-bold text-white mb-4">Kết nối với chúng tôi</h2>
                <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
                    Theo dõi TicketBall trên các mạng xã hội để cập nhật tin tức mới nhất về bóng đá và các chương trình khuyến mãi hấp dẫn
                </p>

                <div class="flex justify-center space-x-6">
                    <!-- Facebook -->
                    <a href="#" class="social-icon w-14 h-14 bg-blue-600 hover:bg-blue-700 rounded-full flex items-center justify-center text-white transition-all">
                        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                        </svg>
                    </a>

                    <!-- Instagram -->
                    <a href="#" class="social-icon w-14 h-14 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 rounded-full flex items-center justify-center text-white transition-all">
                        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.112.221.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.748-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.001z.017 0z" />
                        </svg>
                    </a>

                    <!-- Twitter -->
                    <a href="#" class="social-icon w-14 h-14 bg-blue-400 hover:bg-blue-500 rounded-full flex items-center justify-center text-white transition-all">
                        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                        </svg>
                    </a>

                    <!-- YouTube -->
                    <a href="#" class="social-icon w-14 h-14 bg-red-600 hover:bg-red-700 rounded-full flex items-center justify-center text-white transition-all">
                        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                        </svg>
                    </a>

                    <!-- Zalo -->
